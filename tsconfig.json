{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "allowJs": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,

    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,

    "strict": true,

    "ignoreDeprecations": "6.0"
  }
}
